@model List<WebApplicationOnFramework.Models.Student>

@{
    ViewBag.Title = "Students List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Students</h2>

<p> Number of students: @Model.Count.</p>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Age</th>
        <th></th>
    </tr>

    @foreach (var student in Model)
    {
        <tr>
            <td>@student.StudentId</td>
            <td>@student.StudentName</td>
            <td>@student.Age</td>
            <td>
                @Html.ActionLink("View", "View", "Student", new { id = student.StudentId }, null) | 
                @Html.ActionLink("Edit", "Edit", "Student", new { id = student.StudentId }, null)
            </td>
        </tr>
    }
</table>

@Html.ActionLink("Create Student", "Create", "Student")